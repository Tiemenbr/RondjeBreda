<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RondjeBreda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:RondjeBreda.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Rondje Breda">

    <FlyoutItem Title="Kaart">
        <ShellContent Title="Kaart" ContentTemplate="{DataTemplate pages:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Instellingen">
        <ShellContent Title="Instellingen" ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Bezochte locaties">
        <ShellContent Title="Bezochte locaties" ContentTemplate="{DataTemplate pages:VisitedLocationsPage}" />
    </FlyoutItem>

</Shell>
